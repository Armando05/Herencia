using System;
using System.Collections.Generic;
using System.Text;

namespace HerenciaConstructores
{
public class A
{
public virtual void Metodo()
{
Console.WriteLine("hola metodo en A");
}
}

public class B : A
{
public override void Metodo()
{
Console.WriteLine("hola metodo en B");
}
}

public class C : A
{
public new void Metodo()
{
Console.WriteLine("hola metodo en C");
}
}

class Program
{
static void Main(string[] args)
{
A a = new A();
B b = new B();
C c = new C();

a.Metodo();
b.Metodo();
c.Metodo();
}
}
}
